<div class="col-sm-2 my-2">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title"><%= "#{profile.first_name} #{profile.last_name}" %></h5>
            <p class="card-text"><%= profile.profession.presence || 'N/A' %></p>


            <div class="d-flex justify-content-between">
                <%= link_to edit_profile_path(profile), class: "btn btn-primary" do %>
                    Edit
                <% end %>                
                <%= button_to profile_path(profile), method: :delete, class: "btn" do %>
                    <i class="bi bi-trash"></i>
                <% end %>
            </div>
        </div>
    </div>
</div>